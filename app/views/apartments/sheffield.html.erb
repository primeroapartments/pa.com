          <%= render 'components/apt_73_shef' %>
        <% else %>
          <%= "" %>
        <% end %>
      </div>
      <div class="col-xs-12 col-md-4">
        <p><%= apartment.display_name %></p>
        <ul class="mb-4 pl-4">
          <li>Sleeps <%= apartment.sleep_max %></li>
          <li><%= apartment.bathrooms %> bathroom(s)</li>
          <li>Modern interior, fully equiped kitchen</li>
          <li>Hotel quality towels and linen included</li>
          <li>Hairdryer</li>
          <li>Key free access</li>
          <li>Fast Wifi</li>
        </ul>
        <p align="justify"><%= apartment.description %></p>
      </div>
      <div class="col-md-2">
        <a href="https://primerosheffield.securelettings.net/checkout?rental_id=<%= apartment.pkey %>&start=[booking_start_date]&end=[booking_end_date]" target="_blank" class="btn btn-primero btn-booking">Book</a>
        <div class="clearfix"></div>
        <p class="text-center text-md-right mt-2"> From Â£<%= apartment.nightly %></p>
      </div>
    </div>
  <hr class="style-two">
  <% end %>
</div>
</div>
