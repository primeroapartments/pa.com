<div class="text-center, margin-top">
  <h2>Book your Sheffield apartment</h2>
</div>

<br>
<div class="btn, text-center, margin-top">
  <script src="https://s3.amazonaws.com/widgets.tokeet.com/widgets/interstitial/interstitial-widget.js?1554438722"></script>
    <script>
    window.tokeetIWSettings = {
      "element": "#widget",
      "engineDomain": "primerosheffield.securelettings.net",
      "type": "button",
      "showPrice": true,
      "showMinimumStay": true,
      "apiBaseUrl": "https://api.tokeet.com/",
      "apiMailBaseUrl": "https://mail.tokeet.com",
      "style": {
           "general": {
          "fontFamily": "Arial"
        },
        "button": {
          "backgroundColor": "#061704"
        }
      }
    };
    </script>
  <div id="widget"></div>
</div>
<br><br><br><br>
<hr class="style-one">

<!-- apartment 4 -->



<br>

<div class="text-center, margin-top">
  <h2>Check out all apartments</h2>
</div>
<hr class="style-two">


<% @apartments.each do |apartment| %>
<div class="container">
  <div class="row">
    <div class="col-6">
      <div id="aptcarousel" class="carousel slide" data-ride="carousel" data-interval="3000">
        <ol class="carousel-indicators">
          <li data-target="#aptcarousel" data-slide-to="0" class="active"></li>
          <li data-target="#aptcarousel" data-slide-to="1"></li>
          <li data-target="#aptcarousel" data-slide-to="2"></li>
          <li data-target="#aptcarousel" data-slide-to="3"></li>
        </ol>

        <div class="carousel-inner">
            <div class="carousel-item active">
              <img class="d-block w-100" src="/images/sheffield/<%= apartment.photo1 %>" alt="First slide">
            </div>
            <div class="carousel-item">
              <img class="d-block w-100" src=" /images/sheffield/<%= apartment.photo2 %>" alt="Second slide">
            </div>
            <div class="carousel-item">
              <img class="d-block w-100" src="/images/sheffield/<%= apartment.photo3 %>" alt="Third slide">
            </div>
            <div class="carousel-item">
              <img class="d-block w-100" src="/images/sheffield/<%= apartment.photo4 %>" alt="Fourth slide">
            </div>
        </div>
      </div>
    </div>
    <div class="col-4">
      <h3> <%= apartment.name %></h3>
      <h6> <%= apartment.address %></h6>
    <div class="w-100"></div>
        <ul>• Sleeps up to <%= apartment.persons %> people</ul>
        <ul>• 1 King-size bed, 2 single-beds, 1 sofa-bed</ul>
        <ul>• Bathrooms: <%= apartment.bathrooms %></ul>
        <ul>• Fully furnished</ul>
        <ul>• Bedding and towels included</ul>
        <ul>• Fully equiped kitchen</ul>
        <ul>• Size - add column to model</ul>
        <ul>• Key-free access</ul>
        <ul>• #floor - add column to model</ul>
        <ul>• Elevator</ul>
        <ul>• Fast Wifi</ul>
    <div class="w-100"></div>
        <p> <%= apartment.description %></p>
    </div>
    <div class="col">
      <div>
        <p>From: £<%= apartment.price %></p> per night
      </div>
      <div class="btn">
        <a href= <%= apartment.apartment_link %> target="_blank" class="dropbtn">Book</a>
      </div>
    </div>
  </div>
</div>
<hr class="style-two">
<% end %>

