<p id="notice"<%= notice %>></p>

<h1>Apartments</h1>

<% @apartments.each do |apartment| %>
  <%= apartment.name %> <br>
  <%= apartment.address %> <br>
  <%= apartment.persons %> persons<br>
  <%= apartment.bathrooms %> bathrooms<br>
  <%= apartment.description %> <br>
  <%= apartment.apartment_link %> <br>
  <%= apartment.price %> pounds<br>
  <td><%= link_to 'Show', apartment %></td>
  <td><%= link_to 'Edit', edit_apartment_path(apartment) %></td>
  <td><%= button_to 'Destroy', apartment_path(apartment),
          method: :delete,
          data: { confirm: 'Are you sure?' } %></td>
  <br>
  <br>
<% end %>

<br>
<br>
<%= link_to 'New Apartment', new_apartment_path %>

